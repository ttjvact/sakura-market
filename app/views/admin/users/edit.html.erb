<h1>ユーザー情報更新画面</h1>

<%= form_with(model: @user, url: admin_user_path(params[:id]), method: :put) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Update User Info" %>
<% end %>

